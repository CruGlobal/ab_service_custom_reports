<style>
   body {
      -webkit-font-smoothing: antialiased;
      background-color: #fff;
      border: 0 solid #dadee0;
      color: #475466;
      cursor: default;
      font-family: Roboto, sans-serif;
      font-size: 14px;
      font-weight: 400;
      letter-spacing: .2px;
      white-space: normal;
   }

   table {
      border-collapse: collapse;
   }

   tr:hover {
      background: rgba(0, 0, 0, 0.05);
   }

   th {
      border-bottom: 2px solid gray;
      font-size: 18px;
   }

   td {
      border-bottom: 1px solid lightgray;
   }

   label {
      min-width: 9em;
   }

   td.decimal {
      text-align: right;
   }

   td,
   th {
      padding: 5px 10px;
   }

   tr.total {
      background: #333;
      color: white;
   }

   tr.sub-total {
      background: #4a4a4a;
      color: white;
   }

   tr.sub {
      background: lightgray;
   }

   h1 {
      font-size: 32px;
      margin: 10px;
   }

   h2 {
      font-size: 24px;
      margin: 10px;
   }

   select.option {
      font-size: 24px;
      color: gray;
      border: 1px solid #CCC;
   }
</style>

<script>
   function refresh() {
      const fyperstart = document.getElementById("fyperstart").value;
      const fyperend = document.getElementById("fyperend").value;

      location.href = '/report/income-vs-expense?fyperstart=' + fyperstart + '&fyperend=' + fyperend;
   }
</script>

<h1>Income and Expense Report</h1>
<h2>
   <select id="fyperstart" class="option" onchange="refresh()">
      <% for(var i=0; i < fyperOptions.length; i++) { %>
         <option <% if (fyperstart==fyperOptions[i]) { %> selected <% } %> value="<%= fyperOptions[i] %>"><%=
            fyperOptions[i] %>
         </option>
         <% } %>
   </select>
   <span style="color: lightgray; font-weight: normal;">
      -
   </span>
   <select id="fyperend" class="option" onchange="refresh()">
      <% for(var i=0; i < fyperOptions.length; i++) { %>
         <option <% if (fyperend==fyperOptions[i]) { %> selected <% } %> value="<%= fyperOptions[i] %>"><%=
            fyperOptions[i] %>
         </option>
         <% } %>
   </select>
</h2>


<table>
   <tr>
      <th />
      <% mccs.forEach((department)=>{ %>
         <th>
            <%= department.label %>
         </th>
         <% }) %>
            <th>
               <%= total[languageCode] %>
            </th>
   </tr>
   <% accountGroups.forEach((group)=>{ %>
      <% if (group.subGroups){ %>
         <tr class="sub">
            <td class="label"><b>
                  <%= group.label[languageCode] %>
               </b></td>
            <% for(let i=1; i< numberOfColumns; i++) { %>
               <td />
               <% } %>
         </tr>
         <% group.subGroups.forEach((subGroup)=>{ %>
            <tr>
               <td class="label">
                  <%= subGroup.label[languageCode] %>
               </td>
               <% subGroup.sums.forEach((sum)=>{ %>
                  <td class="decimal">
                     <%= fnValueFormat(sum) %>
                  </td>
                  <% }) %>
            </tr>
            <% }) %>
               <% } %>
                  <tr class="sub-total">
                     <td>
                        <%= group.total[languageCode] %>
                     </td>
                     <% group.sums.forEach((sum)=>{ %>
                        <td class="decimal">
                           <%= fnValueFormat(sum) %>
                        </td>
                        <% }) %>
                  </tr>
                  <% }) %>
                     <tr>
                        <td />
                     <tr>
                     <tr class="total">
                        <td>
                           <%= netIncomeLoss[languageCode] %>
                        </td>
                        <% netTotals.forEach(amount=>{ %>
                           <td class="decimal">
                              <%= fnValueFormat(amount) %>
                           </td>
                           <% }) %>
                     </tr>
                     <tr>
                        <td>
                           <%= netIncomeLossBalance[languageCode] %>
                        </td>
                        <% for(let i=2; i< numberOfColumns; i++) { %>
                           <td />
                           <% } %>
                              <td class="decimal">
                                 <%= fnValueFormat(balSheetTotal) %>
                              </td>
                     </tr>
</table>